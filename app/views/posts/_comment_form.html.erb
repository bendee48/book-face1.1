<%= form_with model: @comment, url: comments_path, local: true, class: "form-inline justify-content-between" do |f| %>
  <%= f.hidden_field :post_id, value: post.id %>
  <%= f.text_area :body, class: "form-control col-7 font-italic mr-2", placeholder: "comment" %>
  <%= f.submit class: "btn btn-outline-success col-4" %>
<% end %>

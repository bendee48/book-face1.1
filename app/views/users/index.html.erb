<div class="container">
  <div class="row d-flex justify-content-center">
    <h1 class="mt-4">Users</h1>
  </div>
  <div class="d-flex justify-content-center mt-4 mb-4">
    <div class="digg_pagination">
      <%= will_paginate @users, :container => false %>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="btn-group-vertical col-4" role="group" aria-label="Basic example">
      <% @users.each do |user| %>
        <%= link_to user.name.titleize, user_path(user), class: "btn btn-outline-success btn-block mt-2 rounded" %>
      <% end %>
    </div>
  </div>
</div>

